<?xml version="1.0" encoding="utf-8"?>
<object>
	<name>PlaceEdit</name>
	<info>
		<sql>
			<primary>idPlaceEdit</primary>
		</sql>
		<form>
			<title>placesEdit</title>
            <pager>20</pager>
            <orderBy>titleUrl</orderBy>
            <searchQuery>SELECT * FROM dir_Place WHERE title LIKE "%#SEARCH%"</searchQuery>
            <searchQueryCount>SELECT COUNT(*) AS numElements FROM dir_Place WHERE title LIKE "%#SEARCH%"</searchQueryCount>
            <label>#title</label>
			<templateItemAdmin>
                <p class="image">#image</p>
                <p class="accent"><strong>#title</strong></p>
                <p class="tiny">#address</p>
                <p class="tiny">#telephone</p>
                <p class="tiny">#city</p>
            </templateItemAdmin>
		</form>
	</info>
	<attributes>
		<attribute>
            <name>idPlaceEdit</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>idPlace</name>
            <type>linkid-autoincrement</type>
            <refObject>idPlace</refObject>
        </attribute>
        <attribute>
            <name>nameEditor</name>
            <label>name</label>
            <required>notEmpty</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>emailEditor</name>
            <label>email</label>
            <required>notEmpty</required>
            <type>text-email</type>
        </attribute>
        <attribute>
            <name>image</name>
            <label>logo</label>
            <type>file</type>
            <mode>image</mode>
        </attribute>
        <attribute>
            <name>imageBackground</name>
            <label>imageBackground</label>
            <type>file</type>
            <mode>image</mode>
        </attribute>
        <attribute>
            <name>colorBackground</name>
            <label>colorBackground</label>
            <type>color</type>
        </attribute>
        <attribute>
            <name>title</name>
            <label>title</label>
            <required>notEmpty</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>titleUrl</name>
            <type>hidden-url</type>
            <refAttribute>title</refAttribute>
        </attribute>
        <attribute>
            <name>address</name>
            <label>address</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>telephone</name>
            <label>telephone</label>
            <type>text</type>
        </attribute>
        <attribute>
            <name>web</name>
            <label>web</label>
            <type>text</type>
        </attribute>
        <attribute>
            <name>email</name>
            <label>email</label>
            <type>text-email</type>
        </attribute>
        <attribute>
            <name>city</name>
            <label>city</label>
            <type>text</type>
        </attribute>
        <attribute>
            <name>cityUrl</name>
            <type>hidden-url</type>
            <refAttribute>city</refAttribute>
        </attribute>
        <attribute>
            <name>shortDescription</name>
            <label>shortDescription</label>
            <type>textarea-small</type>
            <maxlength>250</maxlength>
        </attribute>
        <attribute>
            <name>description</name>
            <label>descriptionComplete</label>
            <type>textarea</type>
        </attribute>
        <attribute>
            <name>idTag</name>
            <label>tags</label>
            <type>multiple-autocomplete</type>
            <refObject>Tag</refObject>
            <lnkObject>PlaceEditTag</lnkObject>
            <refAttribute>name</refAttribute>
        </attribute>
	</attributes>
</object>